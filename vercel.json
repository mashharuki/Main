{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd pkgs/frontend && pnpm build",
  "devCommand": "cd pkgs/frontend && pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": "pkgs/frontend/.next",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./pkgs/frontend",
  "regions": ["hnd1"],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "NextMed",
    "NEXT_PUBLIC_APP_URL": "https://nextmed.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
